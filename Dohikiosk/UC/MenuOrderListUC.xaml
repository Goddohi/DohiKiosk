<UserControl x:Class="Dohikiosk.UC.MenuOrderListUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dohikiosk.UC"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/><!-- 0 이름-->
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <!-- 0 이름-->
        <TextBlock Text="{Binding Name}" Width="auto" Grid.Column="0" />
        <!-- 갯수 -->
        <TextBox Text="{Binding Order, Mode=TwoWay}" Grid.Column="1"/>
        <TextBlock Text="{Binding Price, StringFormat={}  1개당 가격{0}원}" Grid.Column="2"/>

        <TextBlock Text="{Binding TotalPrice, StringFormat={}총금액{0}원}" Grid.Column="3"/>
        <Button Click="Button_Click" Grid.Column="4"></Button>
        
    </Grid>
</UserControl>
